{
  "name": "@agentic-ai-playground/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 10000",
    "build": "tsc -p tsconfig.json --noEmit && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview --port 10000 --host $VITE_HOST",
    "preview:watch": "concurrently -k -n build,serve \"pnpm build:watch\" \"pnpm preview\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run"
  },
  "dependencies": {
    "@agentic-ai-playground/api-client": "workspace:*",
    "@agentic-ai-playground/assistant-runtime": "workspace:*",
    "@assistant-ui/react": "^0.12.0",
    "@assistant-ui/react-markdown": "^0.12.0",
    "@fontsource/ibm-plex-mono": "^5.1.1",
    "@fontsource/space-grotesk": "^5.1.1",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.463.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.13.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "xstate": "^5.20.0",
    "@xstate/react": "^6.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "jsdom": "^25.0.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^2.1.8"
  }
}
